<%= form_for @case_note, url: url do |f| %>
  <%= f.hidden_field :rescue_request_id, value: params[:request_id] %>

  <div class="field my-2">
    <%= f.label :content %><br/>
    <%= f.text_area :content, rows: 7, cols: 100, class: 'form-control' %>
  </div>

  <% if current_user.has_any_role? :developer, :medical %>
  <div class="field my-2">
    <%= f.label :medical, "Private to medical staff?" %>
    <%= f.check_box :medical, checked: @case_note.medical? %>
  </div>
  <% end %>

  <div class="actions my-2">
    <%= f.submit 'Save', name: nil, class: 'btn btn-outline-primary' %>
    <input type="reset" class="btn btn-danger" value="Cancel" />
  </div>
<% end %>
