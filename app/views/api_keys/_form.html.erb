<%= form_for @key, url: url do |f| %>
  <div class="field">
    <%= f.label :name do %>
      Name <small class="text-muted">Give your app a recognizable name. This will be displayed to potential users.</small>
    <% end %>
    <%= f.text_field :name, class: 'form-control' %>
  </div><br/>

  <div class="field">
    <%= f.label :description do %>
      Description <small class="text-muted">Provide a short description of what your app does. This will be displayed to potential users.</small>
    <% end %>
    <%= f.text_area :description, rows: 5, cols: 100, class: 'form-control' %>
  </div><br/>

  <div class="actions">
    <%= f.submit 'Create', class: 'btn btn-success' %>
  </div>
<% end %>